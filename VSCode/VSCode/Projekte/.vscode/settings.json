
 {
    //"files.encoding": "utf8bom",          // Reinkommentieren f체r Mac
    //"files.encoding": "cp437",            // Reinkommentieren f체r Windows
    "files.autoSave": "afterDelay",         // Dateien werden in einem bestimmten Intervall automatisch gespeichert
    "files.autoSaveDelay": 1000,            // Intervall, in dem die Dateien gespeichert werden.
    "editor.bracketPairColorization.enabled": true,
    "editor.insertSpaces": true,            // Ersezt ein Tab durch Leerzeichen
      "editor.tabSize": 2,                    // Setzt die Zahl der durch einen Tab zu ersetzenden Leerzeichen auf 2

    "code-runner.runInTerminal": true,      // Notwendig, damit man Eingaben in sein Programm t채tigen kann.
    "code-runner.preserveFocus": false,     // damit springt man automatisch ins Terminal bei Abarbeitung
    //"code-runner.saveFileBeforeRun": true,// speichert Dateien, bevor Sie mit CodeRunner ausgef체hrt werden. Redundant zu autosave.
    "code-runner.executorMap": {

        "c": "clear && cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt"
        
    },

    "editor.renderWhitespace": "all"
  
      "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "keyword",
                "settings": {
                    "fontStyle": "bold"
                }
            },
        ]
    },
  
 }  
